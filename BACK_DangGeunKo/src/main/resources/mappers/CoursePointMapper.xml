<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.danggeunko.course.dao.CoursePointDao">
	<!-- 좌표 여러 개 저장 -->
    <insert id="insertCoursePoints">
        INSERT INTO course_point
        (course_id, sequence, latitude, longitude)
        VALUES
        <foreach collection="list" item="p" separator=",">
            (#{p.courseId}, #{p.sequence}, #{p.latitude}, #{p.longitude})
        </foreach>
    </insert>


    <!-- 특정 코스의 모든 좌표 조회 -->
    <select id="selectPointsByCourseId" resultType="CoursePoint">
        SELECT *
        FROM course_point
        WHERE course_id = #{courseId}
        ORDER BY sequence ASC;
    </select>


    <!-- 특정 코스의 모든 좌표 삭제 -->
    <delete id="deletePointsByCourseId">
        DELETE FROM course_point WHERE course_id = #{courseId};
    </delete>


    <!-- 특정 좌표 1개 삭제 -->
    <delete id="deletePoint">
        DELETE FROM course_point WHERE point_id = #{pointId};
    </delete>
	
</mapper>